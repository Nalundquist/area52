@{
  Layout = "_Layout";
}

@Using Area52.Models;
<h2>All aliens:</h2>

@if (Model.Count == 0)
{
  <p>No other worldly travellers in our registry!</p>
}
@else
{
  <ul>
  @foreach (Alien alien in Model)
  {
    <li>@Html.ActionLink($"{alien.AlienName}", "Details", new {id = alien.AlienId})</li>
  }
  </ul>	
}
<p>@Html.ActionLink("Create an Alien Profile", "Create")</p>